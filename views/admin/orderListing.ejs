<%- include('../partials/admin/adminHeader.ejs') %>

<style>
.container{
    margin-left: 19%;
    
}
h1{     
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 2.5rem;
    color: #2c3e50;
    text-align: center;
    margin: 30px 0 30px;
    letter-spacing: 2px;
}
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 15px;
    gap: 8px;
}

.page-link {
    padding: 6px 10px;
    border: 1px solid #ddd;
    color: #000000;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
}

.page-link:hover {
    background-color: #f4f4f4;
}

.page-link.disabled {
    color: #ccc;
    cursor: not-allowed;
    pointer-events: none;
}

.current-page {
    padding: 6px 10px;
    border: 1px solid #ddd;
    background-color: #010c18; /* Matches your active page style */
    color: white;
    border-radius: 4px;
}
</style>

<div class="container">
    <h1 class="text-center mb-5">All Orders</h1>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Product Details</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach((order)=>{ %>
                            <tr>
                                <td><%= order._id.toString().slice(-6) %></td>
                                <td><%= order.userId?.name %></td>
                                <td>
                                    <ul>
                                        <% order.orderedItems.forEach((item)=>{ %>
                                            <li>
                                                <strong>Product ID:</strong> <%= item.product.toString().slice(-6) %><br>
                                                <strong>Quantity:</strong> <%= item.quantity %><br>
                                                <strong>Price:</strong> ₹<%= item.price %><br>
                                                <strong>Status:</strong>
                                                <span class="badge 
                                                    <%= item.status === 'Pending' ? 'bg-warning' : 
                                                        item.status === 'Shipped' ? 'bg-info' : 
                                                        item.status === 'Delivered' ? 'bg-success' : 
                                                        'bg-danger' %>">
                                                    <%= item.status %>
                                                </span>
                                                <% if (item.status === "Return") { %>
                                                    <br><strong>Return Reason:</strong> <%= item.returnReason || "No reason provided" %>
                                                <% } %>
                                               <% if(item.status==="Delivered"){%>
                                                    <li>Delivered</li>
                                                    <%}else if(item.status==="Return"){%>
                                                        <li>Returned</li>
                                                        <%}else if(item.status==="Cancelled"){%>
                                                    <li>Cancelled</li>
                                                    <%}else{%>
                                                            
                                                        <% if (order.paymentStatus === "Pending" && order.paymentMethod === "online") { %>
                                                            <p>Payment failed</p>
                                                            <%}else{%>
                                                        <form action="/admin/orders/<%= order._id %>/<%= item.product %>/status" 
                                                              method="POST" 
                                                              class="d-inline mt-2">
                                                            <select name="status" class="form-select form-select-sm d-inline w-auto">
                                                                <% if (item.status === "Pending") { %>
                                                                    <option value="Shipped" <%= item.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                                                    <option value="Delivered" <%= item.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                                                <% } else if (item.status === "Shipped") { %>
                                                                    <option value="Delivered" <%= item.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                                                <% } %>
                                                            </select>
                                                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                                        </form>
                                                    <%}%>
                                                <%}%>
                                            </li>
                                        <% }); %>
                                    </ul>
                                </td>
                                <td>₹<%= order.totalAmount.toFixed(2) %></td>
                                <td>
                                    <a href="/admin/orders/<%= order._id %>" class="btn btn-outline-dark btn-sm">
                                        View Order
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="pagination">
                <% if (totalPages > 1) { %>
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %><%= locals.search ? '&search=' + locals.search : '' %>" class="page-link">Previous</a>
                    <% } else { %>
                        <span class="page-link disabled">Previous</span>
                    <% } %>
                    <span class="page-link current-page"><%= currentPage %></span>
                    <% if (currentPage < totalPages) { %>
                        <% const nextPage = Math.min(currentPage + 1, totalPages); %>
                        <a href="?page=<%= nextPage %><%= locals.search ? '&search=' + locals.search : '' %>" class="page-link"><%= nextPage %></a>
                        <a href="?page=<%= nextPage %><%= locals.search ? '&search=' + locals.search : '' %>" class="page-link">Next</a>
                    <% } else { %>
                        <span class="page-link"><%= currentPage %></span>
                        <span class="page-link disabled">Next</span>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.page-link').forEach(link => {
    link.addEventListener('click', (e) => {
        const page = new URL(link.href).searchParams.get('page');
        console.log('Navigating to page:', page);
    });
});
</script>