<%- include('../partials/admin/adminHeader.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 bg-dark vh-100">
            </div>

            <div class="col-md-10 d-flex flex-column align-items-center justify-content-center min-vh-50">
                <h2 class="fs-2 fw-bold text-dark">Admin Dashboard</h2>

                <!-- Dashboard  -->
                <div class="row my-4 w-75">
                    <div class="col-md-4">
                        <div class="card p-4 text-center shadow-sm">
                            <h5 class="card-title fw-bold">Total Users</h5>
                            <p class="card-text display-6"></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-4 text-center shadow-sm">
                            <h5 class="card-title fw-bold">Total Sales</h5>
                            <p class="card-text display-6"></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-4 text-center shadow-sm">
                            <h5 class="card-title fw-bold">Active Orders</h5>
                            <p class="card-text display-6"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuItems = document.querySelectorAll('#menu li');

            menuItems.forEach(item => {
                item.addEventListener('click', () => {
                    menuItems.forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                });
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>