<%- include('../partials/admin/adminHeader.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #f8f9fa;
        margin-left: 400px;
    }

    .main-content h1{
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            text-align: center;
            margin-bottom: 25px;
        }

    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .search-container input {
        width: 400px;
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .search-container button {
        margin-left: 10px;
        padding: 6px 20px;
        background-color: black;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .table-container {
        width: 120%;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .table {
        width: 100%;
        text-align: center;
    }

    .table th {
        background-color: black;
        color: white;
        padding: 10px;
    }

    .table td {
        background-color: #f5f5f5;
        padding: 10px;
    }

    .btn-danger {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: blue;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 15px;
    gap: 8px;
}

.page-link {
    padding: 6px 10px;
    border: 1px solid #ddd;
    color: #000000;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
}

.page-link:hover {
    background-color: #f4f4f4;
}

.page-link.active {
    background-color: #010c18;
    color: white;
    border-color: #01070e;
}

</style>

<div class="main-content">
    <h1>Products</h1>
    
    <div class="search-container">
        <form action="" method="GET">
            <input type="text" name="search" placeholder="Search customers..." value="<%= locals.search %>">
            <button type="submit">Search</button>
        </form>
    </div>


    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Regular Price</th>
                    <th>Sale Price</th>
                    <th>Offer</th>
                    <th>Size (ML)</th>
                    <th>Quantity</th>
                    <th>Action</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% if (data.length > 0) { %>
                    <% for(let i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i].productName %></td>
                            <td><%= data[i].brand %></td>
                            <td><%= data[i].category.name %></td>
                            <td>₹<%= data[i].regularPrice%></td>
                            <td>₹<%= data[i].salesPrice%></td>
                            <td><%= data[i].productOffer || 0 %>%</td>
                            <td><%= data[i].size %></td>
                            <td><%= data[i].quantity || 0 %></td>

                            <td>
                                <% if (data[i].isBlocked === false) { %>
                                    <button type="button" class="btn btn-danger me-2" onclick="updateProductStatus('<%= data[i]._id %>', true)">
                                        Block
                                    </button>
                                <% } else { %>
                                    <button type="button" class="btn btn-success" onclick="updateProductStatus('<%= data[i]._id %>', false)">
                                        Unblock
                                    </button>
                                <% } %>
                            </td>
                            
                            <td>
                                <a href="/admin/editProduct?id=<%= data[i]._id %>" class="btn">Edit</a>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="9" class="text-center py-4">No products found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <div class="pagination">
        <% if (totalPages > 1) { %>
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %><%= locals.search ? '&search=' + locals.search : '' %>" class="page-link">&laquo;</a>
            <% } %>
            
            <% for(let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %><%= locals.search ? '&search=' + locals.search : '' %>" 
                   class="page-link <%= i == currentPage ? 'active' : '' %>">
                    <%= i %>
                </a>
            <% } %>
            
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %><%= locals.search ? '&search=' + locals.search : '' %>" class="page-link">&raquo;</a>
            <% } %>
        <% } %>
    </div>
</div>

<script>

    document.querySelector('input[name="search"]').addEventListener('input', function(e) {

        clearTimeout(this.searchTimeout);
        this.searchTimeout = setTimeout(() => {
            this.form.submit();
        }, 500);
    });

    function updateProductStatus(productId, block) {
    event.preventDefault();
    
    Swal.fire({
        title: 'Are you sure?',
        text: block ? 'Do you want to block this product?' : 'Do you want to unblock this product?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: block ? '#d33' : '#28a745',
        cancelButtonColor: '#6c757d',
        confirmButtonText: block ? 'Yes, block it!' : 'Yes, unblock it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(block ? '/admin/blockProduct' : '/admin/unblockProduct', {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: productId })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success'
                    }).then(() => {
                        window.location.href = '/admin/products';
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: data.message,
                        icon: 'error'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong!',
                    icon: 'error'
                });
            });
        }
    });
}
</script>