<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurum Admin</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/Aurum.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            display: flex;
        }

        /* Sidebar Styles */
        .sidebar {
            background-color: #212529;
            color: #ffffff;
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .sidebar .brand {
            font-size: 1.5rem;
            font-weight: bold;
            text-align: center;
            margin-top: 60px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

        .sidebar ul {
            list-style: none;
            padding:20px;
        }

        .sidebar ul li {
            padding: 12px 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            transition: background 0.3s ease;
        }

        .sidebar ul li:hover {
            background-color: #495057;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
        }

        .sidebar ul li i {
            font-size: 18px;
        }

        /* Responsive Sidebar */
        .sidebar.collapsed {
            width: 80px;
        }

        .sidebar.collapsed img {
            width: 50px;
            margin-left: 15px;
        }

        .sidebar.collapsed .brand {
            font-size: 0;
            opacity: 0;
        }

        .sidebar.collapsed ul li a span {
            display: none;
        }

        /* Sidebar Toggle Button */
        .toggle-btn {
            position: absolute;
            top: 20px;
            right: -25px;
            background-color: #212529;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .toggle-btn:hover {
            background-color: #495057;
        }

        /* Expand Sidebar on Hover */
        .sidebar.collapsed:hover {
            width: 250px;
        }

        .sidebar.collapsed:hover .brand {
            opacity: 1;
            font-size: 1.5rem;
        }

        .sidebar.collapsed:hover ul li a span {
            display: inline;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="toggle-btn" id="toggle-btn">
            <i class="fas fa-bars"></i>
        </button>
        <div class="brand">AURUM SCENTS</div>
        <ul>
            <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a></li>
            <li><a href="/admin/productAdd"><i class="fas fa-box"></i> <span>Products</span></a></li>
            <li><a href="#order-lists"><i class="fas fa-shopping-cart"></i> <span>Order Lists</span></a></li>
            <li><a href="/admin/users"><i class="fas fa-users"></i> <span>Users</span></a></li>
            <li><a href="#sales-report"><i class="fas fa-chart-line"></i> <span>Sales Report</span></a></li>
            <li><a href="#coupons"><i class="fas fa-tags"></i> <span>Coupons</span></a></li>
            <li><a href="/admin/category"><i class="fas fa-layer-group"></i> <span>Category</span></a></li>
            <li><a href="#banner-management"><i class="fas fa-image"></i> <span>Banner Management</span></a></li>
            <li><a href="#offers"><i class="fas fa-gift"></i> <span>Offers</span></a></li>
            <li><a href="/admin/brands"><i class="fas fa-building"></i> <span>Brands</span></a></li>
            <li><a href="#settings"><i class="fas fa-cog"></i> <span>Settings</span></a></li>
            <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a></li>
        </ul>
    </div>

    <!-- JavaScript for Sidebar Toggle -->
    <script>
        document.getElementById("toggle-btn").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
        });
    </script>

</body>
</html>
