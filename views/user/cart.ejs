                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (cart && cart.items.length> 0) { %>
                                        <% cart.items.forEach(item=> { %>
                                            <tr class="cart-item" data-product-id="<%= item.productId._id %>">
                                                <td class="image product-thumbnail">
                                                    <img src="/uploads/image/<%= item.productId.productImage[0] %>"
                                                        alt="<%= item.productId.productName %>" width="100">
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name">
                                                        <a href="/productDetails/<%= item.productId._id %>">
                                                            <%= item.productId.productName %>
                                                        </a>
                                                    </h5>
                                                </td>
                                                <td class="price" data-title="Price">
                                                    <span>₹<%= item.price.toFixed(2) %></span>
                                                </td>
                                                <td class="text-center" data-title="Quantity">
                                                    <div class="detail-qty border radius m-auto">
                                                        <a href="javascript:void(0)" class="qty-down"
                                                            onclick="updateQuantity('<%= item.productId._id %>', -1)"><i
                                                                class="fi-rs-angle-small-down"></i></a>
                                                        <span class="qty-val">
                                                            <%= item.quantity %>
                                                        </span>
                                                        <a href="javascript:void(0)" class="qty-up"
                                                            onclick="updateQuantity('<%= item.productId._id %>', 1, '<%= item.productId.quantity %>')"><i
                                                                class="fi-rs-angle-small-up"></i></a>
                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Subtotal">
                                                    <span class="subtotal-value">₹<%= (item.price *
                                                            item.quantity).toFixed(2) %></span>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <a href="javascript:void(0)"
                                                        onclick="removeFromCart('<%= item.productId._id %>')"
                                                        class="text-muted"><i class="fi-rs-trash"></i></a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6">
                                                            <div class="text-center p-4">
                                                                <h4>Your cart is empty.</h4>
                                                                <p>Add some products to your cart!</p>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <div class="cart-action text-end">
                            <a href="/shop" class="btn"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                        </div>
                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                        <% if (cart && cart.items.length> 0) { %>
                            <div class="row mb-50">
                                <div class="col-lg-6 col-md-12">
                                    <div class="border p-md-4 p-30 border-radius cart-totals">
                                        <div class="heading_s1 mb-3">
                                            <h4>Cart Totals</h4>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="cart_total_label">Items</td>
                                                        <td class="cart_total_amount" id="cart-total-items">
                                                            <%= cart.items.reduce((total, item)=> total + item.quantity,
                                                                0) %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Cart Subtotal</td>
                                                        <td class="cart_total_amount"><span
                                                                class="font-lg fw-900 text-brand" id="cart-subtotal">₹
                                                                <%= cart.items.reduce((total, item)=> total +
                                                                    (item.price * item.quantity), 0).toFixed(2)
                                                                    %>
                                                            </span></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Shipping</td>
                                                        <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free
                                                            Shipping</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Total</td>
                                                        <td class="cart_total_amount"><strong><span
                                                                    class="font-xl fw-900 text-brand" id="cart-total">₹
                                                                    <%= cart.items.reduce((total, item)=> total +
                                                                        (item.price * item.quantity), 0).toFixed(2)
                                                                        %>
                                                                </span></strong></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <a href="/checkout" class="btn btn-fill-out btn-block mt-30">Proceed To
                                            Checkout</a>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </section>
