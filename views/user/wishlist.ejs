    <script>

    function removeFromWishlist(productId) {
    Swal.fire({
        title: 'Remove Item',
        text: 'Are you sure you want to remove this item from your wishlist?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, remove it!',
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch('/removeFromWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const clickedElement = document.querySelector(`.wishlist-item[data-product-id="${productId}"]`);
                    const row = clickedElement.closest('tr');

                    if (row) {
                        row.remove();
                        const remainingItems = document.querySelectorAll('.wishlist-item');
                        if (remainingItems.length === 0) {
                            const tbody = document.querySelector('table.shopping-summery tbody');
                            if (tbody) {
                                tbody.innerHTML = '<tr><td colspan="6" class="text-center">Your wishlist is empty.</td></tr>';
                            }
                        }
                    }

                    Swal.fire({
                        title: 'Success',
                        text: 'Item removed from wishlist',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });

                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message || 'Failed to remove item',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Something went wrong. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        }
    });
}


function addToCartFromWishlist(productId) {
    fetch('/addToCartFromWishlist', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId: productId, quantity: 1 })
    })
    .then(response => {
        const contentType = response.headers.get('content-type');
        if (contentType && contentType.includes('application/json')) {
            return response.json();
        } else {
            throw new Error('Session may have expired. Please refresh the page and try again.');
        }
    })
    .then(data => {
        if (data.success) {
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Product added to cart and removed from wishlist",
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                window.location.reload();
            });
        } else if (data.exists) {
            Swal.fire({
                title: 'Product Already in Cart',
                text: 'This product is already in your cart',
                icon: 'info',
                confirmButtonText: 'OK'
            });
        } else {
            Swal.fire({
                title: 'Error',
                text: data.message || 'Something went wrong',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            title: 'Error',
            text: error.message || 'Something went wrong',
            icon: 'error',
            confirmButtonText: 'OK'
        });
    });
}


</script>