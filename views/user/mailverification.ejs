<body>

    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="text-center">
                    <h5 class="mb-5">Now Loading</h5>
                    <div class="loader">
                        <div class="bar bar1"></div>
                        <div class="bar bar2"></div>
                        <div class="bar bar3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="login_wrap">
            <div class="padding_eight_all bg-white">
                <div class="heading_s1">
                    <h3>Email Verification</h3>
                </div>
                <form id="otpForm" action="/verify-fpsotp" method="post" onsubmit="return validateformsubmition()">
                    <div class="form-group">
                        <label for="otp">Enter OTP:</label>
                        <input type="text" id="otp" name="otp" class="form-control" required maxlength="6"
                            pattern="\d*" />
                    </div>
                    <button type="submit" class="btn btn-primary">Verify Email</button>
                    <div class="form-group text-center">
                        <div id="otpTimer" class="otp-timer">
                            <span id="timerValue">60</span>
                        </div>
                        <button type="button" class="btn btn-secondary" id="resendButton" disabled
                            onclick="resendOTP()">Resend OTP</button>
                    </div>
                    <% if (locals.message && message.length> 0) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                        <% } %>
                </form>
                <div class="text-muted text-center pt-25">
                    Already verified? <a href="/login">Login now</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>

        document.getElementById("otp").focus();

        let timer = 60;
        let timerInterval;

        function startTimer() {
            const timerValue = document.getElementById("timerValue");
            const resendButton = document.getElementById("resendButton");
            const otpInput = document.getElementById("otp");

            otpInput.disabled = false;
            resendButton.disabled = true;

            timerInterval = setInterval(() => {
                timer--;
                timerValue.textContent = timer;

                if (timer <= 0) {
                    clearInterval(timerInterval);
                    timerValue.classList.add("expired");
                    timerValue.textContent = "Expired";

                    resendButton.disabled = false;
                    resendButton.classList.add("active");
                    otpInput.disabled = true;
                    otpInput.value = '';
                }
            }, 1000);
        }

        function resetTimer() {
            clearInterval(timerInterval);
            timer = 60;

            const timerValue = document.getElementById("timerValue");
            const resendButton = document.getElementById("resendButton");
            const otpInput = document.getElementById("otp");

            timerValue.textContent = timer;
            timerValue.classList.remove("expired");
            resendButton.disabled = true;
            resendButton.classList.remove("active");
            otpInput.disabled = false;
            otpInput.value = '';
            otpInput.focus();

            startTimer();
        }

        function resendOTP() {
            document.getElementById("resendButton").disabled = true;

            $.ajax({
                type: "POST",
                url: "/resendfpotp",
                success: function (response) {
                    if (response.success) {
                        resetTimer();
                        Swal.fire({
                            icon: "success",
                            title: "OTP Resent Successfully",
                            showConfirmButton: true,
                            timer: 1500,
                        });
                    } else {
                        document.getElementById("resendButton").disabled = false;
                        document.getElementById("otp").disabled = true;
                        Swal.fire({
                            icon: "error",
                            title: "Session Expired",
                            text: response.message,
                        });
                    }
                },
                error: function () {
                    document.getElementById("resendButton").disabled = false;
                    document.getElementById("otp").disabled = true;
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Could not resend OTP. Please try again later.",
                    });
                },
            });

            return false;
        }

        function validateformsubmition() {
            const otpInput = document.getElementById("otp");

            if (otpInput.disabled) {
                Swal.fire({
                    icon: "error",
                    title: "OTP Expired",
                    text: "Please resend OTP to try again.",
                });
                return false;
            }

            $.ajax({
                type: "POST",
                url: "/verify-forgotPassOTP",
                data: JSON.stringify({ otp: otpInput.value }),
                contentType: "application/json",
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP Verified Successfully",
                            showConfirmButton: false,
                            timer: 1500,
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: response.message,
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: "error",
                        title: "Invalid OTP",
                        text: "Please try again.",
                    });
                },
            });

            return false;
        }

        startTimer();
    </script>